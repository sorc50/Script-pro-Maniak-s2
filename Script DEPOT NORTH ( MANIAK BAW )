Module.New('Yelling', function(mod) 
  if yellActive then 
    if not Player_Detected then 
     -- Timer2 = yellDelay 
        local Spam2 = os.difftime(os.time(), Timer2) 
        if Spam2 >= 120 then 
        Self.Yell(yellMessage) 
        Timer2 = os.time() 
    end 
    end 
  end 
    mod:Delay(1400) 
    end)  



